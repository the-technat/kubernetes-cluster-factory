{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
      "config:recommended",
      "schedule:earlyMondays"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
		{
			"matchUpdateTypes": [
				"minor",
				"patch"
			],
			"matchCurrentVersion": "!/^0/",
			"automerge": true
		}
	]
}